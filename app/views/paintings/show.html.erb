<div class="p-4">
<h1><%= @painting.name %></h1>
<%= link_to '< back', paintings_path, class: 'btn btn-secondary my-3' %></p>

<div class="flex-container">
  <div class="card-painting flex-item">
    <%= cl_image_tag @painting.photo.key, height: 300, width: 400, crop: :fill %>
    <ul>
      <li><i class="fas fa-palette"></i> <%= @painting.painter %></li>
      <li><i class="fas fa-tape"></i> <%= @painting.dimensions %></li>
      <li><i class="fas fa-copyright"></i> <%= @painting.category %></li>
      <li><i class="fas fa-map-marker-alt"></i> <%= @painting.location %></li>
      <li><i class="fas fa-tag"></i> $<%= @painting.price_per_day %> per day</li>
      <li><%= link_to "Rent this painting", new_painting_request_path(@painting), class: "btn btn-primary my-3" %></li>
    </ul>

  <div class="flex-item">
    <ul class="list-unstyled">
      <% @painting.reviews.each do |review| %>
        <li>
        <% case review.rating %>
          <% when 0 %>
          <i class="far fa-star"></i>
          <i class="far fa-star"></i>
          <i class="far fa-star"></i>
          <i class="far fa-star"></i>
          <i class="far fa-star"></i>
          <% when 1 %>
          <i class="fas fa-star"></i>
          <i class="far fa-star"></i>
          <i class="far fa-star"></i>
          <i class="far fa-star"></i>
          <i class="far fa-star"></i>
          <% when 2 %>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="far fa-star"></i>
          <i class="far fa-star"></i>
          <i class="far fa-star"></i>
          <% when 3 %>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="far fa-star"></i>
          <i class="far fa-star"></i>
          <% when 4 %>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="far fa-star"></i>
          <% when 5 %>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
        <% end %><span class="text-secondary">
        <%= " - \"" + review.content %>"</span></li>
      <% end %>
    </ul>
    <p><%= link_to "Write a review", new_painting_review_path(@painting), class: "btn btn-secondary mt-5" %></p>
    </div>
  </div>
</div>

<%= link_to 'edit', edit_painting_path(@painting), class: 'btn btn-secondary mt-3' %>
<%= link_to 'delete', delete_painting_path(@painting), class: 'btn btn-secondary mt-3' %>


