<div class="p-5">

<h1 class= "mb-4"><%= link_to '< Home', paintings_path, class: 'btn btn-secondary ml-2 mr-4 mb-1' %><%= @painting.name %></h1>

<div class="flex-container">
<div class="card-painting d-flex align-items-start flex-column">
  <div class="mb-3">
    <div>

      <% if policy(@painting).edit? %>
        <%= link_to 'edit', edit_painting_path(@painting), class: 'btn btn-secondary' %>
      <% end %>

      <% if policy(@painting).delete? %>
        <%= link_to 'delete', delete_painting_path(@painting), class: 'btn btn-secondary ml-2' %>
      <% end %>

      <%# if policy(@request).incoming? %>
        <%#= link_to 'view requests', incoming_requests_path, class: 'btn btn-secondary ml-2' %>
      <%# end %>

    </div>
  </div>
<div class="flex-container pr-4">
    <%= cl_image_tag @painting.photo.key, height: 300, width: 400, crop: :fill %>
    <ul>
      <li><i class="fas fa-palette"></i> <%= @painting.painter %></li>
      <li><i class="fas fa-tape"></i> <%= @painting.dimensions %></li>
      <li><i class="fas fa-copyright"></i> <%= @painting.category %></li>
      <li><i class="fas fa-map-marker-alt"></i> <%= @painting.location %></li>
      <li><i class="fas fa-tag"></i> $<%= @painting.price_per_day %> per day</li>
      <% if @painting.user != current_user %>
        <li><%= link_to "Rent this painting", new_painting_request_path(@painting), class: "btn btn-primary mt-5" %>
      <% end %>

      <% if @painting.user != current_user %>
        <%= link_to "Write a review", new_painting_review_path(@painting), class: "btn btn-secondary mt-5 ml-2" %></li>
      <% end %>
    </ul>

  </div></div></div>
<div class="mt-4 ml-3">
  <h2 class="border-bottom w-25 py-3">Reviews:</h2>
  <ul class="list-unstyled">
    <% @painting.reviews.each do |review| %>
      <li class= "border-bottom w-25 py-3">
      <% case review.rating %>
        <% when 0 %>
        <i class="far fa-star"></i>
        <i class="far fa-star"></i>
        <i class="far fa-star"></i>
        <i class="far fa-star"></i>
        <i class="far fa-star"></i>
        <% when 1 %>
        <i class="fas fa-star"></i>
        <i class="far fa-star"></i>
        <i class="far fa-star"></i>
        <i class="far fa-star"></i>
        <i class="far fa-star"></i>
        <% when 2 %>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="far fa-star"></i>
        <i class="far fa-star"></i>
        <i class="far fa-star"></i>
        <% when 3 %>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="far fa-star"></i>
        <i class="far fa-star"></i>
        <% when 4 %>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="far fa-star"></i>
        <% when 5 %>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
      <% end %><span class="text-secondary">
      - "<%= review.content %>"</span></li>
    <% end %>
  </ul>
</div>

